---
interface Props {
  title: string;
  language?: string;
}

const { title, language = 'en' } = Astro.props;
const { base } = Astro.site ? { base: import.meta.env.BASE_URL } : { base: '/' };
---

<!doctype html>
<html lang={language}>
<head>
  <meta charset="utf-8">
  <title>{title} | OCRP</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href={`${base}variables.css`} rel="stylesheet">
  <link href={`${base}base.css`} rel="stylesheet">
</head>
<body>
  <a href="#main" class="skip-link">Skip to main content</a>
  <header>
    <div class="brand">
      <img src={`${base}ocrp-logo.svg`} alt="" class="brand-mark">
      <div class="brand-text">
        <span class="brand-name">Open Climate Resilience Policies</span>
        <span class="brand-acronym">OCRP</span>
      </div>
    </div>
    <nav aria-label="Main">
      <ul>
        <li><a href={`${base}`}>Home</a></li>
        <li><a href={`${base}policies/`}>Policies</a></li>
        <li><a href={`${base}accessibility-and-performance/`}>Accessibility and performance</a></li>
      </ul>
    </nav>
  </header>
  <main id="main">
    <slot />
  </main>
  <footer>
    Content licensed under CC BY 4.0. Â© OCRP.
  </footer>
</body>
</html>
